    "front-matter": "^4.0.2",
    "fs-extra": "^11.2.0",
    "katex": "^0.16.9",
    "sharp": "^0.32.6",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/katex": "^0.16.2",
    "@types/node": "^20.10.4",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
